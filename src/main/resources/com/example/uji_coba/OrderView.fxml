<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane minHeight="500.0" minWidth="600.0" prefHeight="700.0" prefWidth="900.0" maxHeight="1000.0" maxWidth="1400.0" stylesheets="@mamakos_styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.uji_coba.OrderViewController">
    <top>
        <VBox alignment="CENTER" prefHeight="80.0" prefWidth="900.0" styleClass="header">
            <Label styleClass="header-title" text="Manajemen Pesanan" />
            <Label styleClass="order-form-subheader" text="Kelola semua pesanan kosan Anda" />
        </VBox>
    </top>
    <center>
        <VBox spacing="20.0" styleClass="main-content">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
            
            <!-- Filter Section -->
            <VBox spacing="10.0">
                <Label styleClass="section-header" text="Filter Pesanan" />
                <HBox spacing="15.0" alignment="CENTER_LEFT">
                    <Button fx:id="allOrdersButton" onAction="#handleShowAllOrders" styleClass="secondary-button" text="Semua" />
                    <Button fx:id="pendingOrdersButton" onAction="#handleShowPendingOrders" styleClass="secondary-button" text="Menunggu" />
                    <Button fx:id="acceptedOrdersButton" onAction="#handleShowAcceptedOrders" styleClass="secondary-button" text="Diterima" />
                    <Button fx:id="rejectedOrdersButton" onAction="#handleShowRejectedOrders" styleClass="secondary-button" text="Ditolak" />
                </HBox>
            </VBox>
            
            <!-- Orders List -->
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="scroll-pane" VBox.vgrow="ALWAYS">
                <VBox fx:id="orderContainer" spacing="15.0">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>
            </ScrollPane>
        </VBox>
    </center>
    <bottom>
        <VBox alignment="CENTER" prefHeight="60.0" styleClass="main-content">
            <Button onAction="#handleBackClick" styleClass="back-button-visible" text="Kembali ke Dashboard" minHeight="40.0" prefWidth="200.0" />
        </VBox>
    </bottom>
</BorderPane>