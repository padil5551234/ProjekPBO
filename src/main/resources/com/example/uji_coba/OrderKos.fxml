<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="700.0" prefWidth="800.0" stylesheets="@mamakos_styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.uji_coba.OrderKosController">
    <top>
        <VBox alignment="CENTER" minHeight="60.0" styleClass="header">
            <Label styleClass="header-title" text="Form Pemesanan Kosan" />
            <Label styleClass="order-form-subheader" text="Lengkapi data pemesanan Anda" />
        </VBox>
    </top>
    <center>
        <StackPane>
            <ScrollPane fitToWidth="true" maxWidth="480.0" style="-fx-background-color: transparent; -fx-background: transparent;">
                <VBox alignment="CENTER" spacing="15.0" styleClass="order-form-container-improved">
                    <padding>
                        <Insets bottom="20.0" left="25.0" right="25.0" top="20.0" />
                    </padding>
                    
                    <VBox spacing="5.0" alignment="CENTER">
                        <Label styleClass="order-form-header" text="Informasi Kosan" />
                        <Label fx:id="kosanNameLabel" styleClass="order-card-header" text="KOS HITAM" />
                        <Label fx:id="kosanPriceLabel" styleClass="order-card-price" text="Harga: Rp 750.000/bulan" />
                    </VBox>
                    
                    <VBox styleClass="receipt-divider" />
                    
                    <VBox spacing="12.0">
                        <Label styleClass="order-form-header" alignment="CENTER_LEFT" text="Detail Pemesanan" />
                        <VBox spacing="5.0">
                            <Label styleClass="order-form-label" text="Tanggal Mulai Sewa:" />
                            <DatePicker fx:id="sewaDatePicker" styleClass="order-form-field-improved" promptText="Pilih tanggal mulai sewa" />
                        </VBox>
                        <VBox spacing="5.0">
                            <Label styleClass="order-form-label" text="Durasi Sewa (bulan):" />
                            <TextField fx:id="durasiField" styleClass="order-form-field-improved" promptText="Masukkan durasi dalam bulan" text="1" />
                        </VBox>
                        <VBox spacing="5.0">
                            <Label styleClass="order-form-label" text="Catatan Tambahan:" />
                            <TextArea fx:id="catatanArea" styleClass="order-form-field-improved" promptText="Masukkan catatan atau permintaan khusus (opsional)" prefRowCount="2" />
                        </VBox>
                    </VBox>
                    
                    <VBox spacing="5.0" alignment="CENTER">
                        <Label styleClass="receipt-divider" />
                        <Label fx:id="totalLabel" styleClass="receipt-total" text="Total: Rp 750.000" />
                    </VBox>
                    
                    <VBox spacing="15.0" alignment="CENTER" minHeight="60.0">
                        <Button onAction="#handleSubmitOrder" styleClass="order-button-visible" text="Kirim Pesanan" prefWidth="250.0" minHeight="45.0" />
                        <HBox spacing="15.0" alignment="CENTER">
                            <padding>
                                <Insets top="10.0" />
                            </padding>
                            <Button onAction="#handleBackClick" styleClass="back-button-visible" text="Kembali ke Detail" minHeight="40.0" />
                            <Button onAction="#handleBackToDashboard" styleClass="dashboard-button-visible" text="Dashboard" minHeight="40.0" />
                        </HBox>
                    </VBox>
                </VBox>
            </ScrollPane>
        </StackPane>
    </center>
</BorderPane>